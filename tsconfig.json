{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["ES2020", "dom"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "typeRoots": ["node_modules/@types"],
    "rootDir": ".",
  },
  "include": ["src/**/**.ts"],
  "exclude": ["node_modules"]
}
